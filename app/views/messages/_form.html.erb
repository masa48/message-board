<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>


<div class="form-group">
    <label for="message_name" class="col-sm-2 control-label">名前:</label>
    <div class="col-sm-10">
      <%=f.text_field :name, class: "name-box" , placeholder: "山田太郎" %>
    </div>
  </div>

  <div class="form-group">
      <label class="col-sm-2 control-label age-label">年齢:</label>
        <div class="col-sm-10">
          <%= f.number_field :age, class: "age-box" %>
        </div>
    </div>
    
  <div class="form-group">
    <label for="message_body" class="col-sm-2 control-label" >内容:</label>
    <div class="col-sm-10">
      <%=f.text_area :body, class: "body-box" , placeholder: "こんにちは。" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-sm btn-primary"%>
    </div>
  </div>

<% end %>
