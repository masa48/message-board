<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>

  <div class="panel-body">
    <% @messages.each do |message| %>
        <span class="label label-info"><%= message.name %></span>
    <%= message.body %>
    <% end %>  
  </div>
</div>

  <div class="form-group">
    <%= form_for(Message.new) do |f| %>
    <label class="col-sm-2 control-label name-label">名前:</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "name-box", :placeholder => "山田太郎" %>
    </div>
  </div>
 
  <div class="form-group">
    <label class="col-sm-2 control-label box-label">内容:</label>
    <div class="col-sm-10">
      <%= f.text_area :body, class: "body-box", :placeholder => "山田太郎" %>
    </div>
    <div class="col-md-offset-2 col-sm-4">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
    
<% end %>
</div>
 
  
  
  
  
